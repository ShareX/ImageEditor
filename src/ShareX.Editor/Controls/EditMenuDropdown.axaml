<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="120" d:DesignHeight="40"
             x:Class="ShareX.Editor.Controls.EditMenuDropdown"
             x:Name="EditMenuDropdownRoot">

    <UserControl.Resources>
        <FontFamily x:Key="FontAwesome">avares://ShareX.Editor/Assets#Font Awesome 7 Free</FontFamily>
        <!-- Edit menu icons -->
        <x:String x:Key="IconEdit">&#xf044;</x:String>
        <x:String x:Key="IconResize">&#xf31e;</x:String>
        <x:String x:Key="IconResizeCanvas">&#xf853;</x:String>
        <x:String x:Key="IconCropAlt">&#xf565;</x:String>
        <x:String x:Key="IconMagic">&#xf0d0;</x:String>
        <x:String x:Key="IconRotateCW">&#xf01e;</x:String>
        <x:String x:Key="IconRotateCCW">&#xf0e2;</x:String>
        <x:String x:Key="IconSync">&#xf021;</x:String>
        <x:String x:Key="IconArrowsH">&#xf337;</x:String>
        <x:String x:Key="IconArrowsV">&#xf338;</x:String>
        <x:String x:Key="IconRotate">&#xf2ea;</x:String>
        <x:String x:Key="IconSliders">&#xf1de;</x:String>
        <x:String x:Key="IconChevronDown">&#xf078;</x:String>
    </UserControl.Resources>





    <UserControl.Styles>
        <Style Selector="Button.menu-item">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style Selector="Button.menu-item:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#3E3E3E"/>
        </Style>
        <Style Selector="TextBlock.menu-icon">
            <Setter Property="FontFamily" Value="{StaticResource FontAwesome}"/>
            <Setter Property="FontWeight" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="TextBlock.menu-text">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#E7E9EA"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
        </Style>
        <Style Selector="TextBlock.menu-header">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Margin" Value="12,8,12,4"/>
        </Style>
        <Style Selector="Border.menu-separator">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Background" Value="#3E3E3E"/>
            <Setter Property="Margin" Value="8,4"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <!-- Dropdown Button -->
        <Button x:Name="DropdownButton"
                Classes="editor-button"
                Click="OnDropdownButtonClick"
                Height="40"
                MinWidth="60"
                HorizontalContentAlignment="Stretch">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Edit Icon -->
                <TextBlock Grid.Column="0"
                           Text="{StaticResource IconEdit}"
                           FontFamily="{StaticResource FontAwesome}"
                           FontWeight="Black"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="4,0,0,0"/>

                <!-- Spacer -->
                <Border Grid.Column="1"/>

                <!-- Chevron Icon -->
                <TextBlock Grid.Column="2"
                           Text="{StaticResource IconChevronDown}"
                           FontFamily="{StaticResource FontAwesome}"
                           FontWeight="Black"
                           FontSize="10"
                           Foreground="#94A3B8"
                           VerticalAlignment="Center"
                           Margin="4,0,4,0"/>
            </Grid>
        </Button>

        <!-- Popup Menu -->
        <Popup x:Name="EditPopup"
               PlacementTarget="{Binding #DropdownButton}"
               Placement="Bottom"
               IsLightDismissEnabled="True"
               VerticalOffset="4">
            <Border Classes="popup-border" MinWidth="200">
                <StackPanel Orientation="Vertical" Spacing="0">

                    <!-- Resize Group -->
                    <TextBlock Classes="menu-header" Text="RESIZE"/>

                    <Button Classes="menu-item" Click="OnResizeImageClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="menu-icon" Text="{StaticResource IconResize}"/>
                            <TextBlock Classes="menu-text" Text="Resize image"/>
                        </StackPanel>
                    </Button>

                    <Button Classes="menu-item" Click="OnResizeCanvasClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="menu-icon" Text="{StaticResource IconResizeCanvas}"/>
                            <TextBlock Classes="menu-text" Text="Resize canvas"/>
                        </StackPanel>
                    </Button>

                    <Button Classes="menu-item" Click="OnCropImageClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="menu-icon" Text="{StaticResource IconCropAlt}"/>
                            <TextBlock Classes="menu-text" Text="Crop image"/>
                        </StackPanel>
                    </Button>

                    <Button Classes="menu-item" Click="OnAutoCropImageClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="menu-icon" Text="{StaticResource IconMagic}"/>
                            <TextBlock Classes="menu-text" Text="Auto crop image"/>
                        </StackPanel>
                    </Button>

                    <!-- Separator -->
                    <Border Classes="menu-separator"/>

                    <!-- Rotate Group -->
                    <TextBlock Classes="menu-header" Text="ROTATE"/>

                    <Button Classes="menu-item" Click="OnRotate90CWClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="menu-icon" Text="{StaticResource IconRotateCW}"/>
                            <TextBlock Classes="menu-text" Text="Rotate 90° clockwise"/>
                        </StackPanel>
                    </Button>

                    <Button Classes="menu-item" Click="OnRotate90CCWClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="menu-icon" Text="{StaticResource IconRotateCCW}"/>
                            <TextBlock Classes="menu-text" Text="Rotate 90° counter clockwise"/>
                        </StackPanel>
                    </Button>

                    <Button Classes="menu-item" Click="OnRotate180Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="menu-icon" Text="{StaticResource IconSync}"/>
                            <TextBlock Classes="menu-text" Text="Rotate 180°"/>
                        </StackPanel>
                    </Button>

                    <Button Classes="menu-item" Click="OnRotateCustomAngleClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="menu-icon" Text="{StaticResource IconSliders}"/>
                            <TextBlock Classes="menu-text" Text="Rotate custom angle..."/>
                        </StackPanel>
                    </Button>

                    <!-- Separator -->
                    <Border Classes="menu-separator"/>

                    <!-- Flip Group -->
                    <TextBlock Classes="menu-header" Text="FLIP"/>

                    <Button Classes="menu-item" Click="OnFlipHorizontalClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="menu-icon" Text="{StaticResource IconArrowsH}"/>
                            <TextBlock Classes="menu-text" Text="Flip horizontal"/>
                        </StackPanel>
                    </Button>

                    <Button Classes="menu-item" Click="OnFlipVerticalClick">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Classes="menu-icon" Text="{StaticResource IconArrowsV}"/>
                            <TextBlock Classes="menu-text" Text="Flip vertical"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
