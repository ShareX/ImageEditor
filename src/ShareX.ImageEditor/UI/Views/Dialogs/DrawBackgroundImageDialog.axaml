<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="420" d:DesignHeight="260"
             x:Class="ShareX.ImageEditor.Views.Dialogs.DrawBackgroundImageDialog">

    <StackPanel Spacing="0">
        <TextBlock Text="Background Image" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <StackPanel Spacing="10">
            <StackPanel Spacing="4">
                <TextBlock Text="Image file" Foreground="#9CA3AF"/>
                <TextBox x:Name="ImagePathTextBox"
                         TextChanged="OnTextChanged"
                         Watermark="Path to image file"/>
                <Button Classes="editor-button"
                        Content="Browse..."
                        Click="OnBrowseClick"
                        HorizontalAlignment="Left"/>
            </StackPanel>

            <CheckBox x:Name="CenterCheckBox"
                      Content="Center image"
                      IsChecked="True"
                      Foreground="#E7E9EA"
                      Checked="OnSettingChanged"
                      Unchecked="OnSettingChanged"/>

            <CheckBox x:Name="TileCheckBox"
                      Content="Tile image"
                      Foreground="#E7E9EA"
                      Checked="OnSettingChanged"
                      Unchecked="OnSettingChanged"/>
        </StackPanel>

        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button"
                    Content="Cancel"
                    Click="OnCancelClick"
                    Margin="0,0,4,0"
                    HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active"
                    Content="Apply"
                    Click="OnApplyClick"
                    Margin="4,0,0,0"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
