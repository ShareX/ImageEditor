<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:ShareX.ImageEditor.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="360"
             x:Class="ShareX.ImageEditor.Views.Dialogs.LiquidGlassDialog"
             x:Name="LiquidGlassDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Liquid Glass" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <StackPanel Spacing="8">
            <controls:EffectSlider Label="Distortion (px)" ValueStringFormat="{}{0:0}" x:Name="DistortionSlider"
                                   Minimum="0"
                                   Maximum="35"
                                   Value="9"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>

            <controls:EffectSlider Label="Refraction (%)" ValueStringFormat="{}{0:0}" x:Name="RefractionSlider"
                                   Minimum="0"
                                   Maximum="100"
                                   Value="45"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>

            <controls:EffectSlider Label="Chroma shift (px)" ValueStringFormat="{}{0:0}" x:Name="ChromaSlider"
                                   Minimum="0"
                                   Maximum="8"
                                   Value="1"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>

            <controls:EffectSlider Label="Gloss (%)" ValueStringFormat="{}{0:0}" x:Name="GlossSlider"
                                   Minimum="0"
                                   Maximum="100"
                                   Value="40"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>

            <controls:EffectSlider Label="Flow scale (%)" ValueStringFormat="{}{0:0}" x:Name="FlowScaleSlider"
                                   Minimum="40"
                                   Maximum="220"
                                   Value="100"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>
        </StackPanel>

        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
