<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="280"
             x:Class="ShareX.ImageEditor.Views.Dialogs.MotionBlurDialog"
             x:Name="MotionBlurDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Motion blur" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <StackPanel Spacing="8">
            <StackPanel Spacing="4">
                <TextBlock Text="Distance" Foreground="#9CA3AF"/>
                <Slider x:Name="DistanceSlider"
                        Minimum="1"
                        Maximum="200"
                        Value="12"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        ValueChanged="OnValueChanged"/>
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Angle" Foreground="#9CA3AF"/>
                <Slider x:Name="AngleSlider"
                        Minimum="-360"
                        Maximum="360"
                        Value="0"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        ValueChanged="OnValueChanged"/>
            </StackPanel>
        </StackPanel>

        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
