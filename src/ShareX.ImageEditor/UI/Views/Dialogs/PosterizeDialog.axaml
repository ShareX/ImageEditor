<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="220"
             x:Class="ShareX.ImageEditor.Views.Dialogs.PosterizeDialog"
             x:Name="PosterizeDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Posterize" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <StackPanel Spacing="8">
            <TextBlock Text="Levels" Foreground="#9CA3AF"/>
            <Slider x:Name="LevelsSlider"
                    Minimum="2"
                    Maximum="64"
                    Value="8"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    ValueChanged="OnValueChanged"/>
        </StackPanel>

        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>

