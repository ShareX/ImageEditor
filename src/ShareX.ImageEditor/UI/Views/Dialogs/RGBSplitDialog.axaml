<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="330"
             x:Class="ShareX.ImageEditor.Views.Dialogs.RGBSplitDialog"
             x:Name="RGBSplitDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="RGB Split" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <StackPanel Spacing="8">
            <Grid ColumnDefinitions="90,*,*" Margin="0,0,0,2">
                <TextBlock Grid.Column="0" Text="Channel" Foreground="#9CA3AF"/>
                <TextBlock Grid.Column="1" Text="Offset X" Foreground="#9CA3AF"/>
                <TextBlock Grid.Column="2" Text="Offset Y" Foreground="#9CA3AF"/>
            </Grid>

            <Grid ColumnDefinitions="90,*,*" ColumnSpacing="8">
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Red" Foreground="#9CA3AF"/>
                <NumericUpDown Grid.Column="1" x:Name="RedXInput" Value="-5" Minimum="-1000" Maximum="1000" Increment="1" FormatString="0" ValueChanged="OnValueChanged"/>
                <NumericUpDown Grid.Column="2" x:Name="RedYInput" Value="0" Minimum="-1000" Maximum="1000" Increment="1" FormatString="0" ValueChanged="OnValueChanged"/>
            </Grid>

            <Grid ColumnDefinitions="90,*,*" ColumnSpacing="8">
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Green" Foreground="#9CA3AF"/>
                <NumericUpDown Grid.Column="1" x:Name="GreenXInput" Value="0" Minimum="-1000" Maximum="1000" Increment="1" FormatString="0" ValueChanged="OnValueChanged"/>
                <NumericUpDown Grid.Column="2" x:Name="GreenYInput" Value="0" Minimum="-1000" Maximum="1000" Increment="1" FormatString="0" ValueChanged="OnValueChanged"/>
            </Grid>

            <Grid ColumnDefinitions="90,*,*" ColumnSpacing="8">
                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Blue" Foreground="#9CA3AF"/>
                <NumericUpDown Grid.Column="1" x:Name="BlueXInput" Value="5" Minimum="-1000" Maximum="1000" Increment="1" FormatString="0" ValueChanged="OnValueChanged"/>
                <NumericUpDown Grid.Column="2" x:Name="BlueYInput" Value="0" Minimum="-1000" Maximum="1000" Increment="1" FormatString="0" ValueChanged="OnValueChanged"/>
            </Grid>
        </StackPanel>

        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
